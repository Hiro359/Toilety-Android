<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_review_toilet_view"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorForBackground"
    tools:context="com.example.kazuhiroshigenobu.googlemaptraining.ReviewToiletViewActivity">


    <include
        android:id="@+id/app_bar_toilet_review_list_view"
        layout="@layout/app_bar_toilet_review_list_view"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"/>




    <android.support.v7.widget.RecyclerView
        android:id="@+id/toiletReviewList"
        android:layout_marginTop="50dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="bottom"
        >


    </android.support.v7.widget.RecyclerView>

    <ImageView
        android:id="@+id/expanded_image_before"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:visibility="invisible"
        android:contentDescription="@string/mainDetailImage"/>


    <ImageView
        android:id="@+id/expanded_image"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="invisible"
        android:contentDescription="@string/mainDetailImage"/>









</RelativeLayout>

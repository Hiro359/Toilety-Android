<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.Toolbar
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"

    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:minHeight="?attr/actionBarSize"
    android:background="@color/colorForBackground"
    android:id="@+id/edit_pin_location_bar_layout"
    app:titleTextColor="@color/colorText"
    app:subtitleTextColor="@color/colorPrimary"


    >

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/changePinLocation"
        android:textColor="@color/colorPrimary"
        android:textSize="20sp"
        android:layout_gravity="center"
        android:id="@+id/editPinLocationLayoutAppBarTitle" />


</android.support.v7.widget.Toolbar>
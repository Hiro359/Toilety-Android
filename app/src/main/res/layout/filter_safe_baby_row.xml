<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="horizontal"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:background="@color/colorLabel">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/name_booleanValues"
        android:textColor="@color/colorSubText"
        android:textSize="24sp"
        />

    <Switch
        android:id="@+id/filterBabySwitch"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginBottom="2dp"
        android:paddingEnd="10dp"
        android:paddingLeft="20dp"
        android:paddingRight="10dp"
        android:paddingStart="20dp"
        android:text="@string/name_booleanValues"
        android:textColor="@color/colorSubText"
        android:textSize="24sp"
        />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/buttonBabySafe"
        android:layout_toLeftOf="@+id/filterBabySwitch"
        android:layout_toStartOf="@+id/filterBabySwitch"
        />

</RelativeLayout>